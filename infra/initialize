CURRENT_DIR="$(dirname "$(readlink -f "$0")")"

# Super presumptive
cp -r $CURRENT_DIR/config ~/.config
cp -r $CURRENT_DIR/secrets ~/.config/my/secrets
(crontab -l; cat $CURRENT_DIR/crontab) | crontab -

# Set-up
sudo apt-get update
sudo apt-get install python3 python3.8-distutils git

curl https://bootstrap.pypa.io/get-pip.py -o get-pip.py
python3 get-pip.py

